<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="controller.OnboardingController"
            prefWidth="900" 
            prefHeight="650"
            style="-fx-background-color: #1a1a2e;">
    
    <!-- Top header -->
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #16213e; -fx-padding: 20;">
            <Label text="Bienvenue! Choisissez vos films préférés" 
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Sélectionnez au moins 3 films pour personnaliser vos recommandations" 
                   style="-fx-text-fill: #aaa;"/>
            <Label fx:id="selectionCountLabel" text="0 film(s) sélectionné(s)" 
                   style="-fx-text-fill: #e94560; -fx-font-size: 14px;"/>
        </VBox>
    </top>
    
    <!-- Movies grid -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #1a1a2e; -fx-background-color: #1a1a2e;">
            <VBox spacing="20" style="-fx-padding: 20;">
                <FlowPane fx:id="moviesContainer" hgap="15" vgap="15" alignment="CENTER"/>
                
                <HBox alignment="CENTER" spacing="10">
                    <Button fx:id="loadMoreButton" text="Charger plus de films" 
                            onAction="#loadMoreMovies"
                            style="-fx-background-color: #16213e; -fx-text-fill: white; -fx-padding: 10 30;"/>
                    <Label fx:id="loadingLabel" text="Chargement..." style="-fx-text-fill: #888;" visible="false"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
    
    <!-- Bottom submit -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #16213e; -fx-padding: 20;">
            <Button fx:id="submitButton" text="Continuer" 
                    onAction="#handleSubmit"
                    disable="true"
                    prefWidth="200"
                    style="-fx-background-color: #e94560; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12 40;"/>
        </HBox>
    </bottom>
    
</BorderPane>

