<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ActorDetailsController"
            prefWidth="1100" prefHeight="800"
            stylesheets="@/css/styles.css"
            styleClass="root">
    
    <!-- Top Bar -->
    <top>
        <HBox styleClass="header-bar" alignment="CENTER_LEFT" spacing="20">
            <Button fx:id="backButton" text="â† Back" onAction="#handleBack" styleClass="button-ghost"
                    style="-fx-border-color: #3a3a3a; -fx-border-radius: 8;"/>
            <Label text="Actor Details" styleClass="section-title" style="-fx-padding: 0;"/>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane" style="-fx-background-color: #0f0f0f;">
            <VBox spacing="40" styleClass="content-area">
                
                <!-- Actor Info Section -->
                <HBox spacing="40">
                    
                    <!-- Left: Photo -->
                    <VBox alignment="TOP_CENTER" spacing="15">
                        <StackPane styleClass="poster-container">
                            <ImageView fx:id="profileImage" fitWidth="280" fitHeight="400" preserveRatio="true"/>
                        </StackPane>
                    </VBox>
                    
                    <!-- Right: Details -->
                    <VBox spacing="18" HBox.hgrow="ALWAYS">
                        <!-- Name -->
                        <Label fx:id="nameLabel" text="Actor Name" wrapText="true" styleClass="title-label"/>
                        
                        <!-- Birth Info -->
                        <HBox spacing="25" alignment="CENTER_LEFT">
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Label text="ðŸŽ‚" style="-fx-font-size: 16px;"/>
                                <Label fx:id="birthdayLabel" text="" styleClass="subtitle"/>
                            </HBox>
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <Label text="ðŸ“" style="-fx-font-size: 16px;"/>
                                <Label fx:id="birthplaceLabel" text="" styleClass="text-muted"/>
                            </HBox>
                        </HBox>
                        
                        <!-- Popularity -->
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <Label text="Popularity Score" styleClass="text-muted"/>
                            <Label fx:id="popularityLabel" text="0" styleClass="badge-purple"/>
                        </HBox>
                        
                        <!-- Biography -->
                        <VBox spacing="12" style="-fx-padding: 15 0 0 0;">
                            <Label text="Biography" style="-fx-text-fill: #7b5bf5; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                            <Label fx:id="biographyLabel" text="No biography available." wrapText="true"
                                   styleClass="subtitle" style="-fx-font-size: 14px; -fx-line-spacing: 5;"/>
                        </VBox>
                        
                    </VBox>
                </HBox>
                
                <!-- Known For Section -->
                <VBox spacing="18">
                    <Label text="Known For" styleClass="section-title"/>
                    <ScrollPane fitToHeight="true" styleClass="scroll-pane" prefHeight="320" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER">
                        <HBox fx:id="knownForContainer" spacing="20" style="-fx-padding: 8;">
                            <!-- Movie cards will be added dynamically -->
                        </HBox>
                    </ScrollPane>
                </VBox>
                
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>
