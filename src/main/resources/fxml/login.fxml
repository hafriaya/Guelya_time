<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="controller.LoginController"
      alignment="CENTER" 
      spacing="15"
      prefWidth="400" 
      prefHeight="500"
      style="-fx-background-color: #f5f5f5;">
    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    
    <!-- Title -->
    <Label text="Connexion" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <!-- Username field -->
    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Nom d'utilisateur ou Email"/>
        <TextField fx:id="usernameField" promptText="Entrez votre identifiant" prefWidth="300"/>
    </VBox>
    
    <!-- Password field -->
    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Mot de passe"/>
        <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" prefWidth="300"/>
    </VBox>
    
    <!-- Error label -->
    <Label fx:id="errorLabel" 
           style="-fx-text-fill: red;" 
           visible="false"
           wrapText="true"
           maxWidth="300"/>
    
    <!-- Login button -->
    <Button fx:id="loginButton" 
            text="Se connecter" 
            onAction="#handleLogin"
            prefWidth="300"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px;"/>
    
    <!-- Info -->
    <Label text="Pas de compte? Inscrivez-vous sur le site web." style="-fx-text-fill: #888; -fx-font-size: 11px;"/>
    
</VBox>

