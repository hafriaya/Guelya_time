<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="controller.DashboardController"
            prefWidth="1100" 
            prefHeight="700"
            stylesheets="@/css/styles.css"
            styleClass="root">
    
    <!-- Top bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="header-bar">
            <Label text="GUELYA TIME" styleClass="app-title"/>
            
            <Region HBox.hgrow="SOMETIMES" minWidth="30"/>
            
            <TextField fx:id="searchField" 
                       promptText="ðŸ” Search movies, actors..." 
                       prefWidth="350"
                       styleClass="search-field"
                       onAction="#handleSearch"/>
            
            <Button text="Search" onAction="#handleSearch" styleClass="button-primary"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Label fx:id="usernameLabel" styleClass="subtitle"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="button-ghost"/>
        </HBox>
    </top>
    
    <!-- Left menu -->
    <left>
        <VBox spacing="8" styleClass="sidebar" prefWidth="160">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>
            
            <Label text="MENU" style="-fx-text-fill: #666666; -fx-font-size: 11px; -fx-font-weight: bold; -fx-padding: 0 0 10 5;"/>
            
            <Button fx:id="homeButton" text="ðŸ   Home" onAction="#showHome" prefWidth="130" styleClass="nav-button-active"/>
            <Button fx:id="popularButton" text="ðŸ”¥  Popular" onAction="#showPopular" prefWidth="130" styleClass="nav-button"/>
            
            <Region prefHeight="20"/>
            
            <Label text="MY LIBRARY" style="-fx-text-fill: #666666; -fx-font-size: 11px; -fx-font-weight: bold; -fx-padding: 0 0 10 5;"/>
            
            <Button fx:id="watchlistButton" text="ðŸ“‹  My List" onAction="#showWatchlist" prefWidth="130" styleClass="nav-button"/>
            <Button fx:id="favoritesButton" text="â¤ï¸  Favorites" onAction="#showFavorites" prefWidth="130" styleClass="nav-button"/>
        </VBox>
    </left>
    
    <!-- Main content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane" style="-fx-background-color: #0f0f0f;">
            <VBox fx:id="contentArea" spacing="25" styleClass="content-area">
                <Label fx:id="sectionTitle" text="Popular Movies" styleClass="section-title"/>
                <FlowPane fx:id="filmsContainer" hgap="20" vgap="25" styleClass="flow-pane"/>
                
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20 0;">
                    <Button fx:id="showMoreButton" text="Load More" 
                            onAction="#loadMoreMovies"
                            styleClass="button-ghost"
                            style="-fx-border-color: #3a3a3a; -fx-border-radius: 8; -fx-padding: 12 40;"
                            visible="false"/>
                    <Label fx:id="loadingLabel" text="Loading..." styleClass="loading-label" visible="false"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>
