<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="controller.RegisterController"
      alignment="CENTER" 
      spacing="12"
      prefWidth="400" 
      prefHeight="550"
      style="-fx-background-color: #f5f5f5;">
    
    <padding>
        <Insets top="40" right="50" bottom="40" left="50"/>
    </padding>
    
    <Label text="Créer un compte" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Nom d'utilisateur"/>
        <TextField fx:id="usernameField" promptText="Choisir un nom d'utilisateur" prefWidth="300"/>
    </VBox>
    
    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Email"/>
        <TextField fx:id="emailField" promptText="Votre adresse email" prefWidth="300"/>
    </VBox>
    
    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Mot de passe"/>
        <PasswordField fx:id="passwordField" promptText="Choisir un mot de passe" prefWidth="300"/>
    </VBox>
    
    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Confirmer le mot de passe"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" prefWidth="300"/>
    </VBox>
    
    <Label fx:id="errorLabel" 
           style="-fx-text-fill: red;" 
           visible="false"
           wrapText="true"
           maxWidth="300"/>
    
    <Button fx:id="registerButton" 
            text="S'inscrire" 
            onAction="#handleRegister"
            prefWidth="300"
            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px;"/>
    
    <HBox alignment="CENTER" spacing="5">
        <Label text="Déjà un compte?"/>
        <Hyperlink fx:id="loginLink" text="Se connecter" onAction="#handleLoginLink"/>
    </HBox>
    
</VBox>