<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.RegisterController">

    <Label text="Register" style="-fx-font-size: 24;" />

    <TextField fx:id="nameField" promptText="Name" />
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />

    <Button text="Register" onAction="#onRegister" />
    <Button text="Back to Login" onAction="#goLogin" />

    <Label fx:id="messageLabel" textFill="red" />

</VBox>