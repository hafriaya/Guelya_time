<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MovieDetailsController"
            stylesheets="@../css/styles.css"
            styleClass="root">
    
    <!-- Top Bar -->
    <top>
        <HBox styleClass="header-bar" alignment="CENTER_LEFT" spacing="20">
            <Button fx:id="backButton" text="← Back" onAction="#handleBack" styleClass="button-ghost"
                    style="-fx-border-color: #3a3a3a; -fx-border-radius: 8;"/>
            <Label text="Movie Details" styleClass="section-title" style="-fx-padding: 0;"/>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane" style="-fx-background-color: #0f0f0f;">
            <VBox spacing="35" styleClass="content-area">
                
                <!-- Movie Info Section -->
                <HBox spacing="40">
                    
                    <!-- Left: Poster -->
                    <VBox alignment="TOP_CENTER" spacing="20">
                        <StackPane styleClass="poster-container">
                            <ImageView fx:id="posterImage" fitWidth="320" fitHeight="480" preserveRatio="true"/>
                        </StackPane>
                        
                        <!-- Action Buttons -->
                        <VBox spacing="12" alignment="CENTER">
                            <Button fx:id="watchlistButton" text="+ Add to My List" onAction="#handleWatchlist"
                                    prefWidth="220" prefHeight="45" styleClass="button-primary"/>
                            <Button fx:id="favoriteButton" text="♥ Add to Favorites" onAction="#handleFavorite"
                                    prefWidth="220" prefHeight="45" styleClass="button-danger"/>
                        </VBox>
                    </VBox>
                    
                    <!-- Right: Details -->
                    <VBox spacing="18" HBox.hgrow="ALWAYS">
                        <!-- Title -->
                        <Label fx:id="titleLabel" text="Movie Title" wrapText="true" styleClass="title-label"/>
                        
                        <!-- Director -->
                        <HBox fx:id="directorBox" spacing="12" alignment="CENTER_LEFT">
                            <Label text="Directed by" styleClass="text-muted"/>
                            <HBox fx:id="directorContainer" spacing="10" alignment="CENTER_LEFT">
                                <ImageView fx:id="directorPhoto" fitWidth="36" fitHeight="36" preserveRatio="true"/>
                                <Label fx:id="directorLabel" text="" styleClass="hyperlink"
                                       style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
                            </HBox>
                        </HBox>
                        
                        <!-- Rating and Release Date -->
                        <HBox spacing="25" alignment="CENTER_LEFT">
                            <HBox spacing="6" alignment="CENTER_LEFT">
                                <Label text="★" style="-fx-text-fill: #f1c40f; -fx-font-size: 20px;"/>
                                <Label fx:id="ratingLabel" text="0.0" styleClass="rating-badge" style="-fx-font-size: 16px;"/>
                            </HBox>
                            <Label fx:id="voteCountLabel" text="(0 votes)" styleClass="text-muted"/>
                            <Label fx:id="releaseDateLabel" text="Release: N/A" styleClass="subtitle"/>
                        </HBox>
                        
                        <!-- Genres -->
                        <FlowPane fx:id="genresContainer" hgap="10" vgap="10">
                            <!-- Genre tags will be added dynamically -->
                        </FlowPane>
                        
                        <!-- Overview -->
                        <VBox spacing="10" style="-fx-padding: 15 0 0 0;">
                            <Label text="Overview" style="-fx-text-fill: #7b5bf5; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                            <Label fx:id="overviewLabel" text="No overview available." wrapText="true"
                                   styleClass="subtitle" style="-fx-font-size: 14px; -fx-line-spacing: 5;"/>
                        </VBox>
                        
                        <!-- Popularity -->
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Popularity Score:" styleClass="text-muted"/>
                            <Label fx:id="popularityLabel" text="0" styleClass="badge-green"/>
                        </HBox>
                        
                        <!-- Status Messages -->
                        <Label fx:id="statusLabel" text="" styleClass="status-success" visible="false"/>
                        
                    </VBox>
                </HBox>
                
                <!-- Director's Other Films Section -->
                <VBox fx:id="directorFilmsSection" spacing="18" visible="false" managed="false">
                    <Label fx:id="directorFilmsLabel" text="More from Director" styleClass="section-title"/>
                    <ScrollPane fitToHeight="true" styleClass="scroll-pane" prefHeight="280" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER">
                        <HBox fx:id="directorFilmsContainer" spacing="20" style="-fx-padding: 8;">
                            <!-- Director's films will be added dynamically -->
                        </HBox>
                    </ScrollPane>
                </VBox>
                
                <!-- Cast Section -->
                <VBox spacing="18">
                    <Label text="Cast" styleClass="section-title"/>
                    <ScrollPane fitToHeight="true" styleClass="scroll-pane" prefHeight="250" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER">
                        <HBox fx:id="castContainer" spacing="18" style="-fx-padding: 8;">
                            <!-- Cast cards will be added dynamically -->
                        </HBox>
                    </ScrollPane>
                </VBox>
                
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>
