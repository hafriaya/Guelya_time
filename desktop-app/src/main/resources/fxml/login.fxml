<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="controller.LoginController"
      alignment="CENTER" 
      spacing="20"
      prefWidth="450" 
      prefHeight="550"
      stylesheets="@../css/styles.css"
      styleClass="root">
    
    <padding>
        <Insets top="60" right="60" bottom="60" left="60"/>
    </padding>
    
    <!-- Logo/Title Section -->
    <VBox alignment="CENTER" spacing="8" style="-fx-padding: 0 0 30 0;">
        <Label text="GUELYA TIME" styleClass="app-title" style="-fx-font-size: 32px;"/>
        <Label text="Your personal movie experience" styleClass="subtitle"/>
    </VBox>
    
    <!-- Login Form Card -->
    <VBox spacing="20" style="-fx-background-color: #1a1a1a; -fx-background-radius: 16; -fx-padding: 30;">
        
        <!-- Title -->
        <Label text="Sign In" styleClass="section-title" style="-fx-padding: 0;"/>
        
        <!-- Username field -->
        <VBox spacing="8">
            <Label text="Username or Email" styleClass="subtitle" style="-fx-font-size: 12px;"/>
            <TextField fx:id="usernameField" promptText="Enter your username" prefWidth="300" prefHeight="45"/>
        </VBox>
        
        <!-- Password field -->
        <VBox spacing="8">
            <Label text="Password" styleClass="subtitle" style="-fx-font-size: 12px;"/>
            <PasswordField fx:id="passwordField" promptText="Enter your password" prefWidth="300" prefHeight="45"/>
        </VBox>
        
        <!-- Error label -->
        <Label fx:id="errorLabel" 
               styleClass="status-error"
               visible="false"
               wrapText="true"
               maxWidth="300"/>
        
        <!-- Login button -->
        <Button fx:id="loginButton" 
                text="Sign In" 
                onAction="#handleLogin"
                prefWidth="300"
                prefHeight="45"
                styleClass="button-primary"
                style="-fx-font-size: 15px;"/>
        
        <!-- Separator -->
        <HBox alignment="CENTER" spacing="10">
            <Region HBox.hgrow="ALWAYS" style="-fx-background-color: #3a3a3a; -fx-min-height: 1; -fx-max-height: 1;"/>
            <Label text="or" styleClass="text-muted" style="-fx-font-size: 12px;"/>
            <Region HBox.hgrow="ALWAYS" style="-fx-background-color: #3a3a3a; -fx-min-height: 1; -fx-max-height: 1;"/>
        </HBox>
        
        <!-- Register button -->
        <Button fx:id="registerButton" 
                text="Create Account" 
                onAction="#handleRegister"
                prefWidth="300"
                prefHeight="45"
                style="-fx-background-color: transparent; -fx-border-color: #7b5bf5; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-text-fill: #7b5bf5; -fx-font-size: 15px; -fx-font-weight: bold; -fx-cursor: hand;"/>
        
    </VBox>
    
    <!-- Footer Info -->
    <Label text="Register on our website to create your account" styleClass="text-muted" style="-fx-font-size: 12px; -fx-padding: 20 0 0 0;"/>
    
</VBox>

