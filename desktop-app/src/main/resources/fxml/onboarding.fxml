<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="controller.OnboardingController"
            stylesheets="@../css/styles.css"
            styleClass="root">
    
    <!-- Top header -->
    <top>
        <VBox alignment="CENTER" spacing="12" styleClass="header-bar" style="-fx-padding: 30;">
            <Label text="GUELYA TIME" styleClass="app-title"/>
            <Label text="Welcome! Choose your favorite movies" styleClass="title-label" style="-fx-font-size: 26px;"/>
            <Label text="Select at least 3 movies to personalize your recommendations" styleClass="subtitle"/>
            <HBox alignment="CENTER" spacing="8" style="-fx-padding: 10 0 0 0;">
                <Label fx:id="selectionCountLabel" text="0" 
                       style="-fx-text-fill: #7b5bf5; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Label text="movies selected" styleClass="subtitle"/>
            </HBox>
        </VBox>
    </top>
    
    <!-- Movies grid -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane" style="-fx-background-color: #0f0f0f;">
            <VBox spacing="25" styleClass="content-area">
                <FlowPane fx:id="moviesContainer" hgap="20" vgap="25" alignment="CENTER" styleClass="flow-pane"/>
                
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20 0;">
                    <Button fx:id="loadMoreButton" text="Load More Movies" 
                            onAction="#loadMoreMovies"
                            styleClass="button-ghost"
                            style="-fx-border-color: #3a3a3a; -fx-border-radius: 8; -fx-padding: 12 40;"/>
                    <Label fx:id="loadingLabel" text="Loading..." styleClass="loading-label" visible="false"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
    
    <!-- Bottom submit -->
    <bottom>
        <HBox alignment="CENTER" styleClass="header-bar" style="-fx-padding: 25;">
            <Button fx:id="submitButton" text="Continue â†’" 
                    onAction="#handleSubmit"
                    disable="true"
                    prefWidth="220"
                    prefHeight="50"
                    styleClass="button-success"
                    style="-fx-font-size: 16px;"/>
        </HBox>
    </bottom>
    
</BorderPane>

